# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=120

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_NAME=synthetic-data-generator

# Storage Configuration
STORAGE_TYPE=disk  # Options: memory, disk, cloud
TEMP_STORAGE_PATH=./temp
OUTPUT_STORAGE_PATH=./output
MAX_MEMORY_CHUNKS=100

# Cloud Storage (Optional - for AWS S3/GCS)
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
GCS_PROJECT_ID=
GCS_CREDENTIALS_PATH=

# Generation Configuration
DEFAULT_CHUNK_SIZE=1000
MAX_CHUNK_SIZE=5000
MIN_CHUNK_SIZE=100
DEFAULT_OUTPUT_FORMAT=csv  # Options: csv, json, parquet

# Job Management
JOB_PERSISTENCE_PATH=./temp/jobs
JOB_CLEANUP_DAYS=7
MAX_CONCURRENT_JOBS=5

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=50000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
